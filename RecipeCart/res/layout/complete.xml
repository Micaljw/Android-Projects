<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#318CE7" android:weightSum="1">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:text="OCR-IT LLC" android:gravity="center_horizontal" android:textColor="#000" android:textSize="20dip" android:padding="5dip"/>
<TextView android:textColor="#000" android:gravity="center_horizontal" android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="fill_parent" android:text="OCR Demo App on Android" android:textSize="20dip"></TextView>
<TextView android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_width="fill_parent" android:gravity="center_horizontal" android:text="www.OCR-IT.com" android:textSize="20dip" android:paddingTop="5dip"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:textColor="#000" android:textSize="20dip" android:padding="10dip" android:gravity="center_horizontal" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="20dip" android:layout_marginBottom="30dip" android:id="@+id/TextView3" android:text="Text Extraction is Complete!"></TextView>
<Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="View TXT" android:layout_margin="10dip" android:textSize="20dip" android:id="@+id/button_viewText"></Button>
<Button android:layout_width="fill_parent" android:textSize="20dip" android:layout_height="wrap_content" android:id="@+id/button_viewPDF" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:text="Download Searchable PDF"></Button>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:textColor="#000" android:gravity="center_horizontal" android:clickable="true" android:textSize="16dip" android:text="Use full OCR-IT OCR Cloud API for additional features in your own App.  Our OCR quality is high, development account is free, and licensing costs are low and easily manageable" android:id="@+id/textView_completedClickText" android:layout_margin="10dip"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/textView4" android:gravity="center_horizontal" android:layout_marginTop="-10dip" android:text="^^^^ touch to visit OCR-IT.com ^^^^"></TextView>
</LinearLayout>
